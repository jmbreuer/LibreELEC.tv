+++ b/xbmc/application/Application.h
@@ -112,6 +112,7 @@ public:
   bool CreateGUI();
   bool InitWindow(RESOLUTION res = RES_INVALID);
 
+  bool SetExitCode(int exitCode);
   bool Stop(int exitCode);
