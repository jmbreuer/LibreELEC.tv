   CFileItem& CurrentFileItem();
@@ -247,6 +248,7 @@ private:
   unsigned int m_ProcessedExternalCalls = 0;      /*!< counts calls which are processed during one "door open" cycle in FrameMove */
   unsigned int m_ProcessedExternalDecay = 0;      /*!< counts to close door after a few frames of no python activity */
   int m_ExitCode{EXITCODE_QUIT};
+  bool m_ExitCodeSet = false;
   std::shared_ptr<CFileItem> m_itemCurrentFile; //!< Currently playing file
   CEvent m_playerEvent;
 };
diff --git a/xbmc/application/ApplicationMessageHandling.cpp b/xbmc/application/ApplicationMessageHandling.cpp
index 0d7bff1105..22d8972c7d 100644
--- a/xbmc/application/ApplicationMessageHandling.cpp
+++ b/xbmc/application/ApplicationMessageHandling.cpp
@@ -93,12 +93,12 @@ void CApplicationMessageHandling::OnApplicationMessage(MESSAGING::ThreadMessage*
   switch (msg)
   {
     case TMSG_POWERDOWN:
-      if (m_app.Stop(EXITCODE_POWERDOWN))
+      if (m_app.SetExitCode(EXITCODE_POWERDOWN))
         CServiceBroker::GetPowerManager().Powerdown();
       break;
 
     case TMSG_QUIT:
-      m_app.Stop(EXITCODE_QUIT);
+      m_app.SetExitCode(EXITCODE_QUIT);
       break;
 
     case TMSG_SHUTDOWN:
@@ -119,12 +119,13 @@ void CApplicationMessageHandling::OnApplicationMessage(MESSAGING::ThreadMessage*
 
     case TMSG_RESTART:
     case TMSG_RESET:
-      if (m_app.Stop(EXITCODE_REBOOT))
+      if (m_app.SetExitCode(EXITCODE_REBOOT))
         CServiceBroker::GetPowerManager().Reboot();
       break;
 
     case TMSG_RESTARTAPP:
 #if defined(TARGET_WINDOWS) || defined(TARGET_LINUX)
+      m_app.SetExitCode(EXITCODE_RESTARTAPP);
       m_app.Stop(EXITCODE_RESTARTAPP);
 #endif
       break;
